<!DOCTYPE html>
<html>
<head>
  <title>Student Management</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Student Management System</h1>
    
    <div class="header-actions">
      <a href="/add" class="btn btn-primary">Add New Student</a>
    </div>

    <% if (students.length === 0) { %>
      <p class="no-data">No students found. Add a new student to get started.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Subject</th>
            <th>Marks</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(student => { %>
            <tr>
              <td><%= student.name %></td>
              <td><%= student.subject %></td>
              <td><%= student.marks %></td>
              <td class="actions">
                <a href="/edit/<%= student.id %>" class="btn btn-edit">Edit</a>
                <form action="/delete/<%= student.id %>" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this student?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>